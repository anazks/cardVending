<link rel="stylesheet" href="/stylesheets/view-all-forms.css" />

<div class="main-container">
  <div class="title">
    <h1>Errors List</h1>
    <a href="/admin/addError" class="btn">Add New Error</a>
  </div>
  <div class="sub-contents">
    <table id="formsTable">
      <thead>
        <tr>
          <th>Error</th>
          <th>Debug code</th>
          <th>Descreption</th>
          <th>Action</th> 
        </tr>
      </thead>
      <tbody>
        {{#each errors}}
          <tr>
            <td>{{error}}</td>
            <td>{{trublecode}}</td>
            <td>{{Description}}</td>
            <td><a
                href="/admin/edit-questionpaper/{{_id}}"
                class="edit-btn"
              >Edit</a>&nbsp;<a
                href="/admin/delete-error/{{_id}}"
                class="delete-btn"
                onclick="return confirm('Are you sure you want to delete this Question Paper?');"
              >Delete</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $( function () { $('#formsTable').DataTable(); } );
</script>