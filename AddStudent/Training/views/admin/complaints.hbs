<link rel="stylesheet" href="/stylesheets/view-all-forms.css" />

<div class="main-container">
  <div class="title">
    <h1>Complaints List</h1>
    <a href="/admin/add-new-notification" class="btn">Complaints</a>
  </div>
  <div class="sub-contents">
    <table id="formsTable">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Subject</th>
          <th>Type</th>
        </tr>
      </thead>
      <tbody>
        {{#each complaints}}
          <tr>
            <td>{{name}}</td>
            <td>{{email}}</td>
            <td>{{subject}}</td>
            <td>{{type}}</td>
            {{!-- <td><a
                href="/admin/edit-notification/{{_id}}"
                class="edit-btn"
              >Edit</a>&nbsp;<a
                href="/admin/delete-notification/{{_id}}"
                class="delete-btn"
                onclick="return confirm('Are you sure you want to delete this Notification?');"
              >Delete</a></td> --}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<script>
  $( function () { $('#formsTable').DataTable(); } );
</script>